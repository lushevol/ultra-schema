{
  "title": "Ratan Dashboard",
  "description": "Real-time monitoring dashboard for Ratan system",
  "refreshInterval": "30s",
  "panels": [
    {
      "id": "waiting-vd-today",
      "title": "Waiting VD Today",
      "type": "metric",
      "query": {
        "queries": [
          {
            "queryApi": {
              "endpoint": "SettlementCashflowsQuery",
              "payload": {
                "filter": [
                  {
                    "field": "Cashflow.Cashflow_State",
                    "operator": "EQ",
                    "values": ["WAITING"]
                  }
                ],
                "page": 0,
                "size": 1
              },
              "body": ["Cashflow.Cashflow_Id"]
            },
            "resultTransform": "response.pageInfo.totalHits"
          }
        ],
        "aggregation": "result[0]"
      },
      "layout": {
        "x": 0,
        "y": 0,
        "w": 1,
        "h": 1
      }
    }
  ]
}
