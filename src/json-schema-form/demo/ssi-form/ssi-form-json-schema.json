{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ssiType": {
      "title": "SSI Type",
      "type": "string",
      "enum": ["Primary", "Secondary"]
    },
    "swiftType": {
      "title": "Msg",
      "type": "string",
      "default": "MT103",
      "enum": ["MT103", "MT103 SERIAL", "MT202"]
    },
    "settlementMeans": {
      "title": "Settlement Means",
      "type": "string",
      "enum": ["CLG", "CLS SUSP", "NOS", "Over-Account", "Non-Nostro"]
    },
    "settlementAccount": {
      "title": "Settlement Account",
      "type": "string",
      "maxLength": 20
    },
    "coveredPayment": {
      "title": "Covered Payment",
      "type": "boolean"
    },
    "beneficiaryBic": {
      "title": "Beneficiary BIC",
      "type": "string",
      "$ref": "#/definitions/patternBicCode"
    },
    "beneficiaryName": {
      "title": "Beneficiary Full Name",
      "type": "string",
      "maxLength": 35,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "beneficiaryName2": {
      "title": "Beneficiary Full Name1",
      "type": "string",
      "maxLength": 35,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "beneficiaryAccount": {
      "title": "Beneficiary Account",
      "type": "string",
      "minLength": 2,
      "maxLength": 34,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "beneficiaryAddress": {
      "title": "Beneficiary Address",
      "type": "string",
      "maxLength": 60,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "beneficiaryCity": {
      "title": "Beneficiary Country",
      "type": "string",
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "tpp": {
      "title": "TPP",
      "type": "boolean"
    },
    "charges": {
      "title": "Charges",
      "type": "string",
      "enum": ["OUR", "SHA", "BEN"]
    },
    "accountWithInstitutionBic": {
      "title": "Account with Institution BIC",
      "type": "string",
      "$ref": "#/definitions/patternBicCode"
    },
    "accountWithInstitutionName": {
      "title": "Account with Institution Name",
      "type": "string",
      "maxLength": 35,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "accountWithInstitutionAccount": {
      "title": "Account with Institution Account",
      "type": "string",
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "accountWithInstitutionAddress": {
      "title": "Account with Institution Address",
      "type": "string",
      "maxLength": 60,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "accountWithInstitutionCity": {
      "title": "Account with Institution Country",
      "type": "string",
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "intermediaryBic": {
      "title": "Intermediary BIC",
      "type": "string",
      "$ref": "#/definitions/patternBicCode"
    },
    "intermediaryName": {
      "title": "Intermediary Name",
      "type": "string",
      "maxLength": 35,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "intermediaryAccount": {
      "title": "Intermediary Account",
      "type": "string"
    },
    "intermediaryAddress": {
      "title": "Intermediary Address",
      "type": "string",
      "maxLength": 60,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "intermediaryPostcode": {
      "title": "Intermediary Country",
      "type": "string",
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "receiversCorrespondentBic": {
      "title": "Receiver's Correspondent BIC",
      "type": "string",
      "$ref": "#/definitions/patternBicCode"
    },
    "receiversCorrespondentName": {
      "title": "Receiver's Correspondent Name",
      "type": "string",
      "maxLength": 35,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "receiversCorrespondentAccount": {
      "title": "Receiver's Correspondent Account",
      "type": "string",
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "receiversCorrespondentAddress": {
      "title": "Receiver's Correspondent Address",
      "type": "string",
      "maxLength": 60,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "receiversCorrespondentCity": {
      "title": "Receiver's Correspondent Country",
      "type": "string",
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "orderCustomerBic": {
      "title": "Ordering Customer BIC",
      "type": "string",
      "$ref": "#/definitions/patternBicCode"
    },
    "orderCustomerName": {
      "title": "Ordering Customer Name",
      "type": "string",
      "maxLength": 70,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "orderCustomerAccount": {
      "title": "Ordering Customer Account",
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "orderCustomerAddress": {
      "title": "Ordering Customer Address",
      "type": "string",
      "maxLength": 60,
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "orderCustomerCity": {
      "title": "Ordering Customer Country",
      "type": "string",
      "$ref": "#/definitions/patternAlphaBetNumberSpace"
    },
    "senderToReceiver1": {
      "title": "Sender to Receiver 1",
      "type": "string",
      "maxLength": 35
    },
    "senderToReceiver2": {
      "title": "Sender to Receiver 2",
      "type": "string",
      "maxLength": 33
    },
    "senderToReceiver3": {
      "title": "Sender to Receiver 3",
      "type": "string",
      "maxLength": 33
    },
    "senderToReceiver4": {
      "title": "Sender to Receiver 4",
      "type": "string",
      "maxLength": 33
    },
    "senderToReceiver5": {
      "title": "Sender to Receiver 5",
      "type": "string",
      "maxLength": 33
    },
    "senderToReceiver6": {
      "title": "Sender to Receiver 6",
      "type": "string",
      "maxLength": 33
    },
    "remittanceInfomation1": {
      "title": "Remittance Information 1",
      "type": "string",
      "maxLength": 35
    },
    "remittanceInfomation2": {
      "title": "Remittance Information 2",
      "type": "string",
      "maxLength": 33
    },
    "remittanceInfomation3": {
      "title": "Remittance Information 3",
      "type": "string",
      "maxLength": 33
    },
    "remittanceInfomation4": {
      "title": "Remittance Information 4",
      "type": "string",
      "maxLength": 33
    }
  },
  "additionalProperties": false,
  "required": ["settlementAccount", "settlementMeans", "ssiType", "swiftType"],
  "definitions": {
    "patternAlphaBetNumberSpace": {
      "pattern": "^[a-zA-Z0-9 ]*$"
    },
    "patternBicCode": {
      "pattern": "^(([A-Z0-9]{8})|([A-Z0-9]{11}))$"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "swiftType": {
            "const": "MT103"
          }
        }
      },
      "then": {
        "required": [
          "accountWithInstitutionBic",
          "beneficiaryAccount",
          "beneficiaryAddress",
          "charges",
          "orderCustomAccount",
          "orderCustomAddress",
          "orderCustomName"
        ]
      }
    },
    {
      "if": {
        "description": "Cover Payment Logic",
        "properties": {
          "swiftType": {
            "const": "MT103"
          },
          "settlementMeans": {
            "const": "NOS"
          },
          "coveredPayment": {
            "const": true
          }
        }
      },
      "then": {
        "required": ["receiversCorrespondentBic"]
      }
    },
    {
      "if": {
        "properties": {
          "swiftType": {
            "const": "MT202"
          },
          "beneficiaryBic": {
            "pattern": "^$"
          }
        }
      },
      "then": {
        "required": ["beneficiaryName"]
      }
    },
    {
      "if": {
        "properties": {
          "swiftType": {
            "const": "MT202"
          },
          "beneficiaryName": {
            "pattern": "^$"
          }
        }
      },
      "then": {
        "required": ["beneficiaryBic"]
      }
    },
    {
      "if": {
        "properties": {
          "swiftType": {
            "const": "MT202"
          },
          "settlementMeans": {
            "const": "Over-Account"
          }
        }
      },
      "then": {
        "properties": {
          "beneficiaryAccount": {
            "description": "Beneficiary Account is mandatory for SCPAY Markets"
          }
        },
        "required": ["beneficiaryAccount"]
      }
    }
  ]
}
